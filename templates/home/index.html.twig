{% extends 'base.html.twig' %}

{% block title %}Mytho-Logique - Bar à Jeux Mythologique à Saint-André-de-Sangonis{% endblock %}

{% block meta_description %}Bienvenue chez Mytho-Logique, le bar à jeux incontournable de Saint-André-de-Sangonis. Ambiance mythique, 500+ jeux, bières artisanales et snacks.{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section id="hero" class="hero-section">
        <div class="container" data-turbo="false">
            <h1 class="display-1 mytho-title mb-3 text-break">MYTHO-LOGIQUE</h1>
            <p class="lead mb-4 fs-3">Entrez dans la légende, un dé à la main.</p>
            <a href="#games" class="btn btn-mytho btn-lg">Découvrir les Jeux</a>
        </div>
    </section>

    <!-- Games Section -->
    <section id="games" class="py-5">
        <div class="container">
            <h2 class="text-center mytho-title section-title">Nos Jeux</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-11 col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="mytho-title h5">Unlock!</h3>
                            <p class="card-text small">Envie d'évasion ? Résolvez des énigmes, et voyagez à travers plein d'histoires !</p>
                        </div>
                    </div>
                </div>
                <div class="col-11 col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="mytho-title h5">L'île interdite</h3>
                            <p class="card-text small">Saurez-vous assez courageux.se pour vous échapper de l'île ?</p>
                        </div>
                    </div>
                </div>
                <div class="col-11 col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="mytho-title h5">50 missions</h3>
                            <p class="card-text small">Pas une ! Pas deux ! Pas trois ! Mais 50 missions à résoudre en coopérant avec vos allié.e.s</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-5">
                <p>Plus de 500 jeux disponibles dans notre bibliothèque mythique.</p>
            </div>
        </div>
    </section>

    <!-- Menu Section -->
    <section id="menu" class="py-5">
        <div class="container">
            <h2 class="text-center mytho-title section-title">La Taverne</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-11 col-md-4 col-lg-2">
                    <div class="card h-100 bg-dark border-mytho-purple">
                        <img src="{{ asset('images/food/bierrevin.webp') }}" class="card-img-top img-clickable" alt="Bières et Vins" data-action="click->lightbox#open">
                    </div>
                </div>
                <div class="col-11 col-md-4 col-lg-2">
                    <div class="card h-100 bg-dark border-mytho-purple">
                        <img src="{{ asset('images/food/bierrebouteille.webp') }}" class="card-img-top img-clickable" alt="Bières Bouteille" data-action="click->lightbox#open">
                    </div>
                </div>
                <div class="col-11 col-md-4 col-lg-2">
                    <div class="card h-100 bg-dark border-mytho-purple">
                        <img src="{{ asset('images/food/softsnack.webp') }}" class="card-img-top img-clickable" alt="Softs et Snacks" data-action="click->lightbox#open">
                    </div>
                </div>
                <div class="col-11 col-md-4 col-lg-2">
                    <div class="card h-100 bg-dark border-mytho-purple">
                        <img src="{{ asset('images/food/boissonchaude.webp') }}" class="card-img-top img-clickable" alt="Boissons Chaudes" data-action="click->lightbox#open">
                    </div>
                </div>
                <div class="col-11 col-md-4 col-lg-2">
                    <div class="card h-100 bg-dark border-mytho-purple">
                        <img src="{{ asset('images/food/sucre.webp') }}" class="card-img-top img-clickable" alt="Douceurs" data-action="click->lightbox#open">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5">
        <div class="container">
            <h2 class="text-center mytho-title section-title">Contact</h2>
            <div class="row justify-content-center">
                <div class="col-11 col-md-6 mb-4">
                    <h4 class="mytho-title mb-3">Retrouvez-nous</h4>
                    <p><i class="bi bi-geo-alt-fill text-mytho-purple"></i>21 B RUE DE LA LUCQUE, 34725 SAINT-ANDRE-DE-SANGONIS</p>
                    <p><i class="bi bi-telephone-fill text-mytho-purple"></i> <a href="tel:0430968951" class="text-decoration-none text-dark">04 30 96 89 51</a></p>
                    <p><i class="bi bi-envelope-fill text-mytho-purple"></i> <a href="mailto:contact@mytho-logique.fr" class="text-decoration-none text-dark">contact@mytho-logique.fr</a></p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Lundi : fermé</p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Mardi : 17:00 - 00:00</p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Mercredi : 15:30 - 00:00</p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Jeudi : 17:00 - 00:00</p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Vendredi : 17:00 - 00:00</p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Samedi : 15:30 - 00:00</p>
                    <p><i class="bi bi-clock-fill text-mytho-purple"></i> Dimanche : 15:30 - 00:00</p>
                </div>
                <div class="col-11 col-md-6">
                    {{ ux_map(map, {style: 'height: 600px; border-radius: 15px; overflow: hidden;'}) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
