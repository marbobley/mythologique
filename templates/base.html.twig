<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block meta_description %}Mytho-Logique : Votre bar à jeux thématique à Saint-André-de-Sangonis. Découvrez plus de 500 jeux de société dans une ambiance mythologique unique.{% endblock %}">
        <meta name="keywords" content="bar à jeux, mythologie, Saint-André-de-Sangonis, jeux de société, taverne, Hérault, divertissement">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:description" content="{{ block('meta_description') }}">
        <meta property="og:image" content="{{ absolute_url(asset('images/accueil.webp')) }}">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="{{ app.request.uri }}">
        <meta property="twitter:title" content="{{ block('title') }}">
        <meta property="twitter:description" content="{{ block('meta_description') }}">
        <meta property="twitter:image" content="{{ absolute_url(asset('images/accueil.webp')) }}">

        <title>{% block title %}Mytho-Logique - Bar à Jeux{% endblock %}</title>
        <link rel="icon" href="{{ asset("favicon.ico") }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body data-controller="lightbox">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow">
            <div class="container-fluid">
                <a class="navbar-brand mytho-title d-flex align-items-center" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo.webp') }}" alt="Logo" width="40" height="40" class="me-2">
                    MYTHO-LOGIQUE
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#hero">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#games">Nos Jeux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#menu">La Taverne</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>

        <!-- Lightbox Modal -->
        <div class="modal fade" id="lightboxModal" tabindex="-1" aria-hidden="true" data-lightbox-target="modal">
            <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content bg-dark border-mytho-purple">
                    <div class="modal-header border-bottom-0">
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-0 text-center">
                        <img src="" alt="" class="img-fluid rounded-bottom" data-lightbox-target="image">
                    </div>
                </div>
            </div>
        </div>

        <footer class="bg-dark text-light py-4 mt-5 border-top border-mytho-purple">
            <div class="container text-center">
                <p class="mytho-title mb-1">MYTHOLOGIQUE</p>
                <p class="small text-muted mb-0">L'Olympe des Joueurs</p>
                <div class="mt-3">
                    <a href="https://www.instagram.com/mytho_logique_escapegame/" class="text-mytho-purple me-3"><i class="bi bi-instagram"></i></a>
                    <a href="https://www.facebook.com/profile.php?id=61562342037542" class="text-mytho-purple"><i class="bi bi-facebook"></i></a>
                </div>
            </div>
        </footer>
    </body>
</html>
